{
    "name": "connect-four-or-more",
    "version": "1.0.0",
    "description": "A 2-person online game of \"Connect 4\" with the ability to change the board size and rules",
    "main": "./dist/app.js",
    "scripts": {
        "test": "NODE_ENV=test jest --forceExit",
        "build": "npx tsc",
        "start": "node ./dist/app.js",
        "dist": "tsc -p .",
        "dev": "npm run build --prefix Vue/ && nodemon ./src/server.ts --watch ./src/",
        "devfe": "nodemon ./src/server.ts --watch ./src/*.* Vue/ && npm run dev ./Vue/",
        "devbe": "nodemon ./src/server.ts --watch ./src/*.*",
        "type": "module",
        "postinstall": "tsc",
        "deploy": "git add . && git commit -m Heroku && git push heroku main"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/IrinaStelea/connect-four-or-more.git"
    },
    "keywords": [
        "typescript",
        "vue3",
        "node",
        "express",
        "socket.io",
        "multiplayer"
    ],
    "author": "Irina Stelea, Robert Mor√°vek",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/IrinaStelea/connect-four-or-more/issues"
    },
    "homepage": "https://github.com/IrinaStelea/connect-four-or-more#readme",
    "dependencies": {
        "express": "^4.18.2",
        "nodemon": "^2.0.20",
        "npm-run-all": "^4.1.5",
        "socket.io": "^4.5.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "devDependencies": {
        "@types/express": "^4.17.14",
        "@types/jest": "^29.2.1",
        "jest": "^29.2.2",
        "ts-jest": "^29.0.3"
    },
    "engines": {
        "node": "16.15.1"
    }
}
